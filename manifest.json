{
  "manifest_version": 3,
  "name": "HeartBeat",
  "description": "Show YouTube creators some love â€” HeartBeat automatically likes the videos you watch (toggleable, with blacklist support).",
  "version": "1.0.0",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["*://*.youtube.com/*"],
  "action": {
  "default_popup": "popup.html",
  "default_title": "HeartBeat By LivingonEarth"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
    "matches": ["https://www.youtube.com/*"],
    "js": ["src/content.js"],
    "run_at": "document_idle"
    }
  ],
   "keywords": [
    "YouTube auto like",
    "auto like extension",
    "YouTube shorts like",
    "auto heart",
    "YouTube enhancer",
    "HeartBeat"
  ]
}